<h2>Add a Room/Item</h2>

<center>
<button id="roomBtn" type="Button" class="btn btn-lg">Add Room</button>
<button id="itemBtn" type="Button" class="btn btn-lg">Add Item</button>
<br/><br/>

<%= form_tag({:action => 'create', :controller => 'rooms'}, {:id => 'addRoomForm'}) do %>
	<%= text_field_tag :name, nil, :placeholder => "Room Name", :class => "form-control" %>
	<br/>
	<%= text_field_tag :description, nil, :placeholder => "Description", :class => "form-control" %>
	<br/>
	<%= text_field_tag :tag1, nil, :placeholder => "Tag 1", :class => "form-control" %>
	<br/>
	<%= text_field_tag :tag2, nil, :placeholder => "Tag 2 (optional)", :class => "form-control" %>
	<br/>
	<%= text_field_tag :tag3, nil, :placeholder => "Tag 3 (optional)", :class => "form-control" %>
	<br/>
	<%= file_field_tag :imageURL, :class => "form-control" %>
  	<br/>
  	<%= submit_tag "Add Room", :html => { :class => "btn btn-lg" } %>
<% end %>

<%= form_tag({:action => 'create', :controller => 'items'}, {:id => 'addItemForm'}) do %>
	<%= text_field_tag :name, nil, :placeholder => "Item Name", :class => "form-control" %>
	<br/>
	<%= text_field_tag :description, nil, :placeholder => "Description", :class => "form-control" %>
	<br/>
	<%= text_field_tag :tag1, nil, :placeholder => "Tag 1", :class => "form-control" %>
	<br/>
	<%= text_field_tag :tag2, nil, :placeholder => "Tag 2 (optional)", :class => "form-control" %>
	<br/>
	<%= text_field_tag :tag3, nil, :placeholder => "Tag 3 (optional)", :class => "form-control" %>
	<br/>
	<%= file_field_tag :imageURL, :class => "form-control" %>
  	<br/>
  	<%= submit_tag "Add Item", :html => { :class => "btn btn-lg" } %>
<% end %>
</center>

<% if flash[:room_error] %>
	<script type="text/javascript">
		$(document).ready(function(){
			$("#addRoomForm").show();
			$("#addItemForm").hide();
		});
	</script>
<% elsif flash[:item_error] %>
	<script type="text/javascript">
		$(document).ready(function(){
			$("#addRoomForm").hide();
			$("#addItemForm").show();
		});
	</script>
<% else %>
	<script type="text/javascript">
		$(document).ready(function(){
			$("#addRoomForm").hide();
			$("#addItemForm").hide();
		});
	</script>
<% end %>

<script type="text/javascript">
	$("#roomBtn").click(function(){
		$("#addItemForm").hide();
		$("#addRoomForm").show("medium");
	});

	$("#itemBtn").click(function(){
		$("#addRoomForm").hide();
		$("#addItemForm").show("medium");
	});
</script>