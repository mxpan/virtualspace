<h2><%= @item.name %></h2>

<img src="/images/<%= @item.imageURL %>"/>

<div>
	<b>Description:</b>
	<br/>
	<%= @item.description %>
</div>

<div>
	<br>
	<b> Tags: </b> 
	<br/>
	<% @tags.each do |t| %>
		<%= t.name %>
	<% end %>
</div>

<br/><br/>

<% if session[:user_id] ==  @item.user_id%>
<center><button type = "Button" class = "btn btn-lg" onclick = "window.location.href = '/items/edit/<%= @item.id %>'">Edit Item</button></center>
<% end %>